        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="AutoWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="введите логин"  Width="200" Height="30" />
            <TextBox x:Name="logintxt"  Width="200" Height="30" />
            <PasswordBox x:Name="passwordtxt" Width="200" Height="30" />
            <Button Content="войти" Width="200" Height="30" Click="Button_Click" />
            <Button Content="регистрация" Width="200" Height="30" Click="Button_Click_1" />
        </StackPanel>
    </Grid>
